@model UserModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">@ViewData["Title"] </h3>
                </div>
                @if (Model == null)
                {
                    <span class="text-danger">@TempData["Message"]</span>
                }
                else
                {
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="mt-3">
                                <h4>@Model.Name @Model.Surname</h4>
                                <p class="text-muted">@Model.Email</p>

                                <div class="mt-3">
                                    <div class="p-3 border-bottom">
                                        <p class="mb-1 font-weight-bold">DNI</p>
                                        <p class="text-muted mb-0">@Model.DNI</p>
                                    </div>
                                    <div class="p-3">
                                        <p class="mb-1 font-weight-bold">CUIT</p>
                                        <p class="text-muted mb-0">@Model.CUIT</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>