@model BalanceModel
@using System.Globalization
@{
    ViewData["Title"] = "Balance";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">@ViewData["Title"] </h3>
                </div>
                @if (Model == null)
                {
                    <span class="text-danger">@TempData["Message"]</span>
                }
                else
                {
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="mt-3">
                                <div class="mt-3">
                                    <div class="p-3 border-bottom">
                                        <p class="mb-1 font-weight-bold">Numero de tarjeta</p>
                                        <p class="text-muted mb-0">@Model.FormattedNumber</p>
                                    </div>
                                    <div class="p-3 border-bottom">
                                        <p class="mb-1 font-weight-bold">Fecha de Vencimiento</p>
                                        <p class="text-muted mb-0">@Model.ExpirationDate.ToString("MM/yy")</p>
                                    </div>
                                    <div class="p-3">
                                        <p class="mb-1 font-weight-bold">Balance</p>
                                        <p class="text-muted mb-0">@Model.Balance.ToString("N2", new CultureInfo("es-AR"))</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>